<div class="panel">
<h3>Live Statistics</h3>
<div class="icon-bar four-up">
	<a class="item">
		<i><%= @current_agents.count %></i>
		<label>Agents logged in</label>
	</a>
	<a class="item">
                <i><%= @agents_in_calls.count %></i>
                <label>Agents in calls</label>
        </a>
	<a class="item">
                <i><%= @agents_waiting.count %></i>
                <label>Agents waiting</label>
        </a>
	<a class="item">
                <i><%= @agents_paused.count %></i>
                <label>Agents paused</label>
        </a>
</div>
	<table style="flat">
		<thead>
		<tr>
			<th>Name</th>
			<th>Status</th>
			<th>MM:SS</th>
			<th>Interviews completed</th>
			<th>Interviews completed offgrid</th>
			<th>Appointments made</th>
		</tr>
		</thead>
		<tbody>
		<% @agent_details.each do |hash, value| %>
		<tr style="background-color: <%= row_color(value[:status]).html_safe %>">
		<% value.values.each do |v| %>
			<td><%= v %></td>
		<% end %>
		</tr>
		<% end %>
		</tbody>
	</table>
</div>
